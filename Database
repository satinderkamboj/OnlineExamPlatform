create table TBL_ADMIN
(
	AD_ID INT IDENTITY PRIMARY KEY,
	AD_NAME NVARCHAR(50) NOT NULL,
	AD_PASSWORD NVARCHAR(50) NOT NULL
)
CREATE TABLE TBL_QUESTION
(
	QUESTION_ID INT IDENTITY PRIMARY KEY,
	Q_TEXT NVARCHAR(MAX) NOT NULL, 
	OPTION_A NVARCHAR(50) not null ,
	OPTION_B NVARCHAR(50) not null ,
	OPTION_C NVARCHAR(50) not null ,
	OPTION_D NVARCHAR(50) not null ,
	ANSWER NVARCHAR(50) not null,
	DIFFICULTY_LEVEL NVARCHAR(50) NOT NULL
)

CREATE TABLE TBL_STUDENT
(
	S_ID INT IDENTITY PRIMARY KEY,
	S_NAME NVARCHAR(50) NOT NULL,
	S_PASSWORD NVARCHAR(50) NOT NULL,
	DATE_OF_EXAM DATETIME NOT NULL,
	EXAM_NAME NVARCHAR(50),
	MARKS INT NOT NULL
)
CREATE TABLE TBL_SETEXAM
(
	EXAM_ID INT IDENTITY PRIMARY KEY,
	EXAM_DATE DATETIME,
	EXAM_FK_S INT FOREIGN KEY REFERENCES TBL_STUDENT (S_ID),
	EXAM_NAME NVARCHAR(50) NOT NULL,
	STD_SCORE INT
)
